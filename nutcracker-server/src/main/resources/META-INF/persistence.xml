<persistence xmlns="http://java.sun.com/xml/ns/persistence"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
         version="2.0">
<persistence-unit name="nutcracker-unit">
  <provider>org.hibernate.ejb.HibernatePersistence</provider>
  <jta-data-source>java:jboss/datasources/NutCrackerDB</jta-data-source>
  <class>com.adrznej.nutcracker.model.CategoryModel</class>
  <class>com.adrznej.nutcracker.model.EventModel</class>
  <class>com.adrznej.nutcracker.model.EventPersonModel</class>
  <class>com.adrznej.nutcracker.model.EventPlaceModel</class>
  <class>com.adrznej.nutcracker.model.NoteModel</class>
  <class>com.adrznej.nutcracker.model.UserModel</class>
  <properties>
     <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
     <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
     <property name="hibernate.show_sql" value="true"/>
     <property name="hibernate.hbm2ddl.auto" value="create"/>
   </properties>
  </persistence-unit>
</persistence>